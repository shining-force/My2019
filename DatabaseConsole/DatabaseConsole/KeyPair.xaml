<UserControl x:Class="DatabaseConsole.KeyPairCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseConsole"
             mc:Ignorable="d" 
             d:DesignWidth="300" Height="28">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="39"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="1" Fill="Black" Height="4" Margin="0" Stroke="Black" VerticalAlignment="Center"/>
        <TextBox x:Name="mKeyBox" Height="24" Margin="2" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="14" FontFamily="MS Gothic"/>
        <TextBox x:Name="mValueBox" Height="24" Margin="2" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" FontSize="14" FontFamily="MS Gothic"/>
        <Button x:Name="mDelBtn" Content="删除" Grid.Column="3" Height="24" Margin="0" Width="35" Click="mDelBtn_Click" FontSize="14" FontFamily="MS Gothic"/>

    </Grid>
</UserControl>

<Page x:Class="AwsUserLogClient.ReadLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AwsUserLogClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReadLogPage">

    <Grid Background="#FFE8E8E8">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="m_hPageTitle" Content="读日志" Grid.ColumnSpan="5" Background="#FF2C2C2C" Foreground="White" VerticalContentAlignment="Center" Loaded="m_hPageTitle_Loaded"/>
        <Label x:Name="m_hStDataLabel" Content="开始日期" Margin="0" Grid.Row="1" VerticalContentAlignment="Center" Loaded="m_hStDataLabel_Loaded"/>
        <Label x:Name="m_hEdDataLabel" Content="结束日期" Margin="0" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" Loaded="m_hEdDataLabel_Loaded"/>
        <Calendar x:Name="m_hCalendar" HorizontalAlignment="Left" Margin="50,24,0,0" VerticalAlignment="Top" Visibility="Hidden" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" Height="168" Width="179"/>
        <TextBox x:Name="m_hStDateBox" Margin="0" TextWrapping="Wrap" Text="TextBox" Grid.Row="2" VerticalContentAlignment="Center" Loaded="m_hStDateBox_Loaded"/>
        <TextBox x:Name="m_hEdDateBox" Margin="0" TextWrapping="Wrap" Text="TextBox" Grid.Column="1" Grid.Row="2" VerticalContentAlignment="Center" Loaded="m_hEdDateBox_Loaded"/>
        <Button x:Name="m_hReadDataBtn" Content="读 取" Margin="0" Grid.Column="2" Grid.Row="1" Loaded="m_hReadDataBtn_Loaded"/>
        <TextBlock x:Name="m_hDetailbox" Margin="0" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Grid.ColumnSpan="5" Grid.Row="4"/>
        <DataGrid x:Name="m_hLogViewer" Margin="0" Loaded="m_hLogViewer_Loaded" IsSynchronizedWithCurrentItem="True" AutoGenerateColumns="False" Grid.Row="3" Grid.ColumnSpan="5">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="m_hViewerCol_Date" Binding="{Binding mFormatDate}" ClipboardContentBinding="{x:Null}" Header="日期"/>
                <DataGridTextColumn x:Name="m_hViewerCol_LogTitle" Binding="{Binding mTitle}" ClipboardContentBinding="{x:Null}" Header="标题"/>
                <DataGridTextColumn x:Name="m_hViewerCol_FromUser" Binding="{Binding mFromUser}" ClipboardContentBinding="{x:Null}" Header="来自用户"/>
                <DataGridTextColumn x:Name="m_hViewerCol_LogDetail" Binding="{Binding mDetail}" ClipboardContentBinding="{x:Null}" Header="详细"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="m_hState" Content="Label" Margin="0" Grid.Row="2" Grid.Column="2" VerticalContentAlignment="Center" Loaded="m_hState_Loaded"/>
        <Button x:Name="m_hOutputDataBtn" Content="输 出" Margin="0" Grid.Column="3" Grid.Row="1" Loaded="m_hOutputDataBtn_Loaded"/>

    </Grid>
</Page>
